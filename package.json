{
  "name": "leak-detection-app",
  "version": "1.0.0",
  "private": true,
  "description": "Professional leak detection services website",
  "packageManager": "pnpm@10.13.1",
  "scripts": {
    "dev": "next dev",
    "dev:turbo": "next dev --turbo",
    "build": "next build",
    "build:analyze": "cross-env ANALYZE=true next build",
    "start": "next start",
    "start:standalone": "node .next/standalone/server.js",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf .next out dist reports coverage",
    "clean:cache": "rimraf .next/cache",
    "analyze": "cross-env ANALYZE=true next build",
    "optimize-images": "node scripts/optimize-images.js",
    "image-audit": "node scripts/image-audit.js",
    "build:images": "pnpm run optimize-images",
    "build:full": "pnpm run optimize-images && next build",
    "build:production": "pnpm run clean && pnpm run lint && pnpm run typecheck && pnpm run optimize-images && next build",
    "build:standalone": "pnpm run build:production && echo 'Use: pnpm start:standalone'",
    "clean:images": "rimraf public/images/optimized",
    "clean:all": "pnpm run clean && pnpm run clean:images && pnpm run clean:cache",
    "audit:bundle": "pnpm run build:analyze",
    "audit:performance": "lighthouse http://localhost:3000 --output=html --output-path=./reports/lighthouse.html",
    "audit:security": "audit-ci --config audit-ci.json",
    "preview": "pnpm run build && pnpm run start",
    "test:build": "pnpm run build && echo 'Build successful'",
    "sourcemap:analyze": "cross-env ANALYZE=true BUNDLE_ANALYZE=true next build"
  },
  "dependencies": {
    "@hookform/resolvers": "^4.1.3",
    "@radix-ui/react-accordion": "^1.2.3",
    "@radix-ui/react-alert-dialog": "^1.1.6",
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-menubar": "^1.1.6",
    "@radix-ui/react-popover": "^1.1.6",
    "@radix-ui/react-progress": "^1.1.2",
    "@radix-ui/react-radio-group": "^1.2.3",
    "@radix-ui/react-scroll-area": "^1.2.3",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slider": "^1.2.3",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-switch": "^1.1.3",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-toast": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@radix-ui/react-visually-hidden": "^1.2.3",
    "assert": "^2.1.0",
    "autoprefixer": "^10.4.21",
    "browserify-zlib": "^0.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "critters": "^0.0.25",
    "crypto-browserify": "^3.12.1",
    "date-fns": "^3.6.0",
    "geist": "^1.4.2",
    "https-browserify": "^1.0.0",
    "lucide-react": "^0.475.0",
    "next": "^15.4.3",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "react": "^19.1.0",
    "react-day-picker": "^9.8.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.54.2",
    "recharts": "^2.15.1",
    "sharp": "^0.34.3",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "tailwind-merge": "^3.0.1",
    "tailwindcss-animate": "^1.0.7",
    "url": "^0.11.4",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.4.3",
    "@types/node": "^20",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "buffer": "^6.0.3",
    "cross-env": "^7.0.3",
    "imagemin": "^9.0.1",
    "imagemin-avif": "^0.1.6",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^10.0.0",
    "imagemin-webp": "^8.0.0",
    "lighthouse": "^12.8.0",
    "postcss": "^8",
    "process": "^0.11.10",
    "rimraf": "^6.0.1",
    "sharp-cli": "^5.2.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}